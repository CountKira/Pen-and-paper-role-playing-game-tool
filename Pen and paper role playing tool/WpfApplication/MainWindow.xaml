<Window x:Class="WpfApplication.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WpfApplication"
		mc:Ignorable="d"
		Title="MainWindow" Height="420" Width="640">
	<Window.DataContext>
		<local:BindingTest/>
	</Window.DataContext>
	<DockPanel FocusManager.FocusedElement="{Binding ElementName=messageInput}">
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_Chat">
				<MenuItem Header="_Server" Command="{Binding ServerButton}"/>
				<MenuItem Header="_Client" Command="{Binding ClientButton}"/>
			</MenuItem>
		</Menu>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<TextBlock Grid.ColumnSpan="2" Name="messageOutput" Text="{Binding MessageOutput}"/>
			<TextBox Grid.Row="1" Name="messageInput" Text="{Binding MessageInput}"></TextBox>
			<Button Grid.Row="1" Grid.Column="1" Padding="5" IsDefault="True" Command="{Binding SendButton}" CommandParameter="{Binding Path=Text, ElementName=messageInput}">Send</Button>
		</Grid>
	</DockPanel>
</Window>