<Window x:Class="WpfApplication.Windows.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WpfApplication"
		xmlns:p = "clr-namespace:WpfApplication.Properties"
		mc:Ignorable="d"
		Title="{x:Static p:Resources.Chat_window}" Height="420" Width="640">
    <DockPanel FocusManager.FocusedElement="{Binding ElementName=messageInput}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Chat">
                <MenuItem Header="_Server" Command="{Binding ServerButton}" />
                <MenuItem Header="_Client" Command="{Binding ClientButton}" />
                <MenuItem Header="_Boardgame" Command="{Binding BoardButton}" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBlock Name="messageOutput" Text="{Binding MessageOutput}" />
            </ScrollViewer>
            <TextBox Grid.Row="1" Name="messageInput" Text="{Binding MessageInput, UpdateSourceTrigger=PropertyChanged}" />
            <Button Grid.Row="1" Grid.Column="1" Padding="5" IsDefault="True" Command="{Binding SendButton}" Content="{x:Static p:Resources.Send}" />
        </Grid>
    </DockPanel>
</Window>