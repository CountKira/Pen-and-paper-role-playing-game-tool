<Window x:Class="WpfApplication.Windows.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication.Windows"
        mc:Ignorable="d"
        Title="BoardWindow" Height="300" Width="300">
    <Canvas Name="canvas">
        <Ellipse Width="30" Height="30" Fill="Blue" Canvas.Top="{Binding Top}" Canvas.Left="{Binding Left}"
                 MouseDown="Ellipse_MouseDown" MouseUp="Ellipse_MouseUp" MouseMove="Ellipse_MouseMove" />
        <Button Click="Button_Click" Canvas.Bottom="0" Canvas.Right="0" Width="70" Height="20" Content="New Circle" />
    </Canvas>
</Window>