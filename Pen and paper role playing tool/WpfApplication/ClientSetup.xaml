<Window x:Class="WpfApplication.ClientSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="ClientSetup" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
	<StackPanel FocusManager.FocusedElement="{Binding ElementName=ipAddressBox}">
		<StackPanel Orientation="Horizontal" Margin="10">
			<Label>Server IP:</Label>
			<TextBox Name="ipAddressBox" Width="100"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label>Chat name:</Label>
			<TextBox Name="chatName" Width="100"/>
		</StackPanel>
		<Button Click="Connect_Click" IsDefault="True" Margin="10">Connect</Button>

	</StackPanel>
</Window>
